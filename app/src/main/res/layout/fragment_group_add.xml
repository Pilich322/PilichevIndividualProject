<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.GroupAddFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Сохранение Группы"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Название"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/editTextNumberGroupNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Номер"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextGroupName"
        app:layout_constraintStart_toStartOf="@+id/editTextTextGroupName"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextGroupName" />

    <Button
        android:id="@+id/buttonSaveGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="saveGroup"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="@+id/editTextNumberGroupNumber"
        app:layout_constraintStart_toStartOf="@+id/editTextNumberGroupNumber"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberGroupNumber" />
</androidx.constraintlayout.widget.ConstraintLayout>