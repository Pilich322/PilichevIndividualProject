<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewStudentFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Имя"
        app:layout_constraintStart_toEndOf="@+id/textViewStudentSecondName"
        app:layout_constraintTop_toTopOf="@+id/textViewStudentSecondName" />

    <TextView
        android:id="@+id/textViewStudentSecondName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Фамилия"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewStudentMiddleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Отчество"
        app:layout_constraintStart_toEndOf="@+id/textViewStudentFirstName"
        app:layout_constraintTop_toTopOf="@+id/textViewStudentFirstName" />

    <TextView
        android:id="@+id/textViewStudentBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Дата рождения"
        app:layout_constraintStart_toStartOf="@+id/textViewStudentSecondName"
        app:layout_constraintTop_toBottomOf="@+id/textViewStudentSecondName" />

    <TextView
        android:id="@+id/textViewStudentGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="Группа"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewStudentBirthday"
        app:layout_constraintTop_toTopOf="@+id/textViewStudentBirthday" />

    <ImageView
        android:id="@+id/imageViewDeleteStudent"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_delete_24" />

    <ImageView
        android:id="@+id/imageViewChangeStudent"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewDeleteStudent"
        app:layout_constraintTop_toTopOf="@+id/imageViewDeleteStudent"
        app:srcCompat="@drawable/sharp_border_color_24" />

</androidx.constraintlayout.widget.ConstraintLayout>