<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.GroupUpdateFragment">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Изиенение Группы"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextGroupNameUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Название"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/editTextNumberGroupNumberUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Номер"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextGroupNameUpdate"
        app:layout_constraintStart_toStartOf="@+id/editTextTextGroupNameUpdate"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextGroupNameUpdate" />

    <Button
        android:id="@+id/buttonSaveGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="saveGroup"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="@+id/editTextNumberGroupNumberUpdate"
        app:layout_constraintStart_toStartOf="@+id/editTextNumberGroupNumberUpdate"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberGroupNumberUpdate" />

</androidx.constraintlayout.widget.ConstraintLayout>